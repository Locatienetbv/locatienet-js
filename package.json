{
  "name": "locatienet-js",
  "version": "1.0.5",
  "author": "Remco Zut",
  "homepage": "https://github.com/locatienetbv/locatienet-js/#readme",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:leaflet-searchaddress": "npm --workspace=@locatienet/leaflet-searchaddress run build",
    "build:leaflet-tilelayer": "npm --workspace=@locatienet/leaflet-tilelayer run build",
    "build:api-client": "npm --workspace=@locatienet/api-client run build",
    "build:all": "npm run build:api-client && npm run build:leaflet-searchaddress && npm run build:leaflet-tilelayer",
    "prepublish:all": "git add . && git commit -m \"build for publish\" && git push",
    "lerna:publish": "npm run prepublish:all && npx lerna publish --conventional-commits --yes",
    "docs": "call ./scripts/publish-locatienet-api-docs.bat && call ./scripts/publish-locatienet-js-docs.bat"
  },
  "devDependencies": {
    "rollup": "^4.50.0",
    "rollup-plugin-import-css": "^4.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "autoprefixer": "^10.4.21",
    "banner": "^0.0.5",
    "concurrently": "^9.2.1",
    "lerna": "^8.2.3",
    "postcss-scss": "^4.0.9",
    "rimraf": "^6.0.1",
    "sass": "^1.91.0",
    "sass-true": "^9.0.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
